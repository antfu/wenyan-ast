{
  "name": "@wenyan-lang/monorepo",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap && lerna run pack",
    "pack": "lerna run pack",
    "dev": "npm -C packages/viewer run dev",
    "build": "npm run clean && npm run build:typings && rollup -c",
    "build:viewer": "npm -C packages/viewer run build",
    "build:typings": "tsc --emitDeclarationOnly",
    "publish:ci": "lerna run publish:ci",
    "release": "bump --commit --push --tag && npm run publish:ci",
    "lint": "eslint packages/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "lerna run test",
    "clean": "rimraf packages/**/dist typings",
    "postinstall": "npm run bootstrap"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": "Anthony Fu<anthonyfu117@hotmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@antfu/eslint-config-vue": "0.3.3",
    "@rollup/plugin-json": "4.1.0",
    "@types/fs-extra": "9.0.1",
    "@types/jest": "26.0.10",
    "@types/node": "13.13.4",
    "chalk": "4.1.0",
    "eslint": "7.7.0",
    "eslint-plugin-jest": "23.20.0",
    "rollup": "2.26.5",
    "rollup-plugin-dts": "1.4.12",
    "rollup-plugin-typescript2": "^0.27.0",
    "rollup-plugin-uglify": "6.0.4",
    "fast-glob": "3.2.4",
    "fs-extra": "9.0.1",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "lerna": "3.22.1",
    "lint-staged": "10.2.11",
    "nodemon": "2.0.4",
    "rimraf": "3.0.2",
    "ts-jest": "26.2.0",
    "ts-node": "9.0.0",
    "typescript": "4.0.2"
  }
}
